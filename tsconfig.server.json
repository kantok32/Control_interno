{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": false
  },
  "include": ["src/server/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/components/**/*",
    "src/pages/**/*",
    "src/context/**/*",
    "src/hooks/**/*"
  ]
} 